<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/username_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username_profile"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginStart="300dp"
        app:layout_constraintBottom_toTopOf="@+id/total_wins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/entrenador_pokemon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/total_wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_wins"
        android:textSize="28sp"
        android:layout_marginStart="300dp"
        android:layout_marginVertical="30dp"
        app:layout_constraintBottom_toTopOf="@+id/total_games"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_profile" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/total_games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_games"
        android:textSize="28sp"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_wins" />

</androidx.constraintlayout.widget.ConstraintLayout>
