<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/guessPokemonFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagePokemon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginEnd="390dp"
        android:layout_marginBottom="50dp"
        android:contentDescription="@string/imageDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pokemonQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pokemonQuestion"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginStart="360dp"
        app:layout_constraintBottom_toTopOf="@id/btnPokemon1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPokemon1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text=""
        android:layout_marginStart="360dp"
        app:layout_constraintBottom_toTopOf="@id/btnPokemon2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemonQuestion"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPokemon2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text=""
        android:layout_marginStart="360dp"
        app:layout_constraintBottom_toTopOf="@id/btnPokemon3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPokemon1"
        app:layout_constraintWidth_percent="0.3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPokemon3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text=""
        android:layout_marginStart="360dp"
        app:layout_constraintBottom_toTopOf="@id/btnPokemon4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPokemon2"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPokemon4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="360dp"
        android:layout_marginBottom="50dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPokemon3"
        app:layout_constraintWidth_percent="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>
