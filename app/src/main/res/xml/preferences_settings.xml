<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditTextPreference
        android:key="username"
        android:title="@string/title_username_settings"
        app:useSimpleSummaryProvider="true"
        android:hint="username"/>
    <ListPreference
        android:key="difficulty"
        android:title="@string/title_difficulty_settings"
        app:useSimpleSummaryProvider="true"
        android:defaultValue="easy"
        android:entries="@array/game_difficulty_options"
        android:entryValues="@array/game_difficulty_codes"/>
    <ListPreference
        android:key="language"
        android:title="@string/title_language_settings"
        app:useSimpleSummaryProvider="true"
        android:defaultValue="en"
        android:entries="@array/language_options"
        android:entryValues="@array/language_codes"/>
</PreferenceScreen>